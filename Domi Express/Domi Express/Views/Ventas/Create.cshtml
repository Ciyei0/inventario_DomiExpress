@model Domi_Express.Models.Venta

@{
    ViewData["Title"] = "Crear Venta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Crear Venta</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="ProductoId">Producto</label>
        <select asp-for="ProductoId" asp-items="ViewBag.ProductoId" class="form-control">
            <option value="">Seleccione un producto</option>
        </select>
        <span asp-validation-for="ProductoId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CantidadVendida">Cantidad Vendida</label>
        <input asp-for="CantidadVendida" class="form-control" />
        <span asp-validation-for="CantidadVendida" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="FechaVenta">Fecha de Venta</label>
        <input asp-for="FechaVenta" class="form-control" />
        <span asp-validation-for="FechaVenta" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Total">Total</label>
        <input asp-for="Total" class="form-control" readonly />
        <span asp-validation-for="Total" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
