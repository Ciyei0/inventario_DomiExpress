@model IEnumerable<Domi_Express.Models.Categoria>

@{
    ViewData["Title"] = "Categorías";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-3">
    <!-- Título y Buscador -->
    <div class="row mb-3">
        <div class="col-md-6">
            <h2 class="text-primary">Categorías</h2>
        </div>
        <div class="col-md-6 text-end">
            <form method="get" class="d-inline-block">
                <div class="input-group">
                    <input type="text" name="searchString" class="form-control" placeholder="Buscar categoría..." value="@Context.Request.Query["searchString"]" />
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-search"></i> Buscar
                    </button>
                </div>
            </form>
            <a asp-action="Create" class="btn btn-success">
                <i class="fas fa-plus"></i> Crear Categoría
            </a>
        </div>
    </div>

    <!-- Tabla de Categorías -->
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Listado de Categorías</h5>
        </div>
        <div class="card-body">
            <table class="table table-bordered table-hover">
                <thead class="table-primary">
                    <tr>
                        <th>Nombre</th>
                        <th>Descripción</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Nombre</td>
                            <td>@item.Descripcion</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                                    <i class="fas fa-edit"></i> Editar
                                </a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm text-white">
                                    <i class="fas fa-info-circle"></i> Detalles
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash"></i> Eliminar
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
